<h1>Edit Task</h1>

<% if @task.errors.any? %>
    <div class="alert alert-danger">
        <ul>
            <% @task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @task, url: @task, method: :patch do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_area :desc %>
    <%= f.label :completed %>
    <%= f.check_box :is_done %>
    <%= f.submit %>
<% end %>