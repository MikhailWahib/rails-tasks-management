<h1>Sign up</h1>

<%= form_with(model: @user, url: users_path, html: { class: "form-horizontal" }) do |f| %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>

    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>

    <%= f.submit "Sign up" %>
<% end %>